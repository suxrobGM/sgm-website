@using Microsoft.AspNetCore.Identity
@using SGM.Domain.Entities.Users
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    <a id="manage" class="nav-link text-dark mt-1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        <img id="user_avatar" class="rounded-circle" width="30" height="30" src="@user?.ProfilePhotoPath" alt="avatar" />
        @UserManager.GetUserName(User)
    </a>
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/Blog">
        <button id="logout" type="submit" class="nav-link btn btn-link text-dark d-none d-sm-block">LOGOUT</button>
        <button id="logout" type="submit" class="nav-link btn btn-link text-dark d-inline d-sm-none" data-toggle="tooltip" data-placement="top" title="Logout"><i class="fa fa-sign-out-alt"></i></button>
    </form>
}
else
{
    <a class="nav-link text-dark d-none d-sm-block" id="register" asp-area="Identity" asp-page="/Account/Register">SIGN UP</a>
    <a class="nav-link text-dark d-inline d-sm-none" id="register" asp-area="Identity" asp-page="/Account/Register" data-toggle="tooltip" data-placement="top" title="Register"><i class="fa fa-user-plus"></i></a>

    <a class="nav-link text-dark d-none d-sm-block" id="login" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
    <a class="nav-link text-dark d-inline d-sm-none" id="login" asp-area="Identity" asp-page="/Account/Login" data-toggle="tooltip" data-placement="top" title="Login"><i class="fa fa-sign-in-alt"></i></a>
}

