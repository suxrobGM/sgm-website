    <script>
        window.getRecaptchaToken = async function (siteKey) {
            return new Promise((resolve, reject) => {
                grecaptcha.enterprise.ready(async () => {
                    try {
                        const token = await grecaptcha.enterprise.execute(siteKey, { action: 'contact' });
                        resolve(token);
                    } catch (error) {
                        reject(error);
                    }
                });
            });
        };
    </script>
